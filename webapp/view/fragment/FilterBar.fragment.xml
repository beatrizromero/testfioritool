<core:FragmentDefinition
    controllerName="apptorparameters.controller.Table"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:table="sap.ui.table"
    xmlns:form="sap.ui.layout.form"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
>
    <fb:FilterBar
        id="filterbar"
        persistencyKey="myPersKey"
        useToolbar="false"
        search="refreshTable"
        afterVariantLoad="onAfterVariantLoad"
        showFilterConfiguration="false"
    >
        <fb:filterGroupItems>
            <fb:FilterGroupItem
                id="filterGroupParameterType"
                name="parameterType"
                label="{i18n>main.parameterType}"
                groupName="Group1"
                mandatory="false"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <Input
                        id="filterParameterTypeInput"
                        showValueHelp="true"
                        valueHelpRequest="onValueHelpRequestParameterType"
                        value="{localModel>/searchParams/parameterType}"
                        maxLength="10"
                    >
                        <suggestionItems>
                            <core:ListItem
                                id="suggestionItemFilterParameterType"
                                text="{mainModel>param}"
                            />
                        </suggestionItems>
                    </Input>
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem
                id="filterGroupParameterValue"
                name="parameterValue"
                label="{i18n>main.parameterValue}"
                groupName="Group1"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <Input
                        id="filterParameterValueInput"
                        showSuggestion="true"
                        showValueHelp="false"
                        valueHelpRequest="onValueHelpRequestParameterValue"
                        value="{localModel>/searchParams/parameterValue}"
                        suggestionItems="{valueHelpModel>/MatTGroupValueHelp}"
                        maxLength="20"
                    >
                        <suggestionItems>
                            <core:ListItem
                                id="suggestionItemFilterParameterValue"
                                text="{valueHelpModel>param_value}"
                            />
                        </suggestionItems>
                    </Input>
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem
                id="filterGroupParameterValueDescription"
                name="parameterValueDescription"
                label="{i18n>main.parameterValueDescription}"
                groupName="Group1"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <Input
                        id="filterParameterValueDescriptionInput"
                        showSuggestion="true"
                        showValueHelp="false"
                        valueHelpRequest="onValueHelpRequestParameterDesc"
                        value="{localModel>/searchParams/parameterValueDescription}"
                        suggestionItems="{valueHelpModel>/ProductDescValueHelp}"
                        maxLength="40"
                    >
                        <suggestionItems>
                            <core:ListItem
                                id="suggestionItemFilterParameterValueDescription"
                                text="{valueHelpModel>product_desc}"
                            />
                        </suggestionItems>
                    </Input>
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem
                id="filterGroupLanguageCode"
                name="languageCode"
                label="{i18n>main.languageCode}"
                groupName="Group1"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <Select
                        id="filterLangCodeSelect"
                        items="{ path: 'localModel>/oSelectLang',templateShareable:false}"
                        selectedKey="{localModel>/searchParams/languageCode}"
                    >
                        <core:Item
                            id="filterGroupStatusSelectItem"
                            key="{localModel>key}"
                            text="{localModel>value}"
                        />
                    </Select>
                </fb:control>
            </fb:FilterGroupItem>
        </fb:filterGroupItems>
    </fb:FilterBar>
</core:FragmentDefinition>
